@model DotNetForever.Web.ViewModels.SaleViewModel

@{
    ViewBag.Title = "Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col col-lg-12">
        <h2>Purchase</h2>
        <hr />
    </div>


    <div class="col col-lg-6 mb-3">
        <form>
            <div class="input-group">
                <input type="text" name="search" class="form-control" placeholder="search by code or customer" value="@Model.Search" required>
                <div class="input-group-append" id="button-addon4">
                    <button class="btn btn-primary" type="submit"><i class="fas fa-search mr-2"></i>Search</button>
                    <a class="btn btn-secondary" href="@Url.Action("Index","Sale")"><i class="fas fa-redo-alt mr-2"></i>Reset</a>
                    <a href="@Url.Action("Create","Sale")" class="btn btn-success" type="button"><i class="fas fa-plus mr-2"></i>Sale</a>
                   
                </div>
            </div>
        </form>
    </div>

    <div class="col col-lg-12">
        @{
            Html.RenderPartial("_Listing", Model.Sales);
        }
    </div>


    <!-- Modal Create -->
    <div class="modal fade" id="createCategoryModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">

        </div>
    </div>
</div>

