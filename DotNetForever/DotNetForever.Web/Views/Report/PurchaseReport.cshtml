@model List<DotNetForever.Model.Model.PurchaseReport>

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}

<hr />
<form id="purchaseReportForm">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-4">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Start Date</label>
                <div class="col-sm-8">
                    <input class="form-control" id="startDate" name="startDate">
                    <span id="startDateError"></span>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">End Date</label>
                <div class="col-sm-8">
                    <input class="form-control" id="endDate" name="endDate">
                    <span id="endDateError"></span>
                </div>
            </div>


            <a href="@Url.Action("PurchaseReport", "Report")" class="btn btn-primary float-right ml-2"><i class="fas fa-redo-alt mr-2"></i>Reset</a>
            <button id="searchButton" type="button" class="btn btn-primary float-right ml-4"><i class="fas fa-search mr-2"></i>Search</button>
        </div>
        <hr />
       
        @*<div class="col-md-3">
            <button id="searchButton" type="button" class="btn btn-primary float-right ml-4"><i class="fas fa-search mr-2"></i>Search</button>
            <a href="@Url.Action("PurchaseReport", "Report")" class="btn btn-primary float-right"><i class="fas fa-redo-alt mr-2"></i>Reset</a>
        </div>*@

    </div>
</form>
<!--Purchase Report Table-->
<div id="showPurchaseReportListing" class="mt-3">
    
</div>

<script src="~/Contents/CustomValidation/PurchaseReport.js"></script>


<script>
    $(document).ready(function() {

        //default load the data on page load 
        $.ajax({
            type: "POST",
            url: "/Report/SearchPurchaseReport",
            data: $("#purchaseReportForm").serialize()

        })
        .done(function (response) {
            $("#showPurchaseReportListing").html(response);
        })
        .fail(function (xmlHttpRequest, textStatus, errorThrown) {
            alert("Fail");
        });

    })
</script>