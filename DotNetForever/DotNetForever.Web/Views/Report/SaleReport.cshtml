@model IEnumerable<DotNetForever.Model.Model.SaleReport>

@{
    ViewBag.Title = "SaleReport";
    Layout = "~/Views/Shared/_ReportLayout.cshtml";
}
<hr/>
<form id="saleReportForm">
    <div class="row">
        <div class="col-md-2">

        </div>
        <div class="col-md-3">

            <div class="form-group row">
                <label class="col-sm-4 col-form-label">Start Date</label>
                <div class="col-sm-8">
                    <input class="form-control" id="startDate" name="startDate">
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group row">
                <label class="col-sm-4 col-form-label">End Date</label>
                <div class="col-sm-8">
                    <input class="form-control" id="endDate" name="endDate">
                </div>
            </div>

            <button id="searchButton" type="button" class="btn btn-primary float-right ml-4"><i class="fas fa-search mr-2"></i>Search</button>
            <a href="@Url.Action("SaleReport", "Report")" class="btn btn-primary float-right"><i class="fas fa-redo-alt mr-2"></i>Reset</a>

        </div>

        <div class="col-md-2">

        </div>
        <hr />
    </div>
</form>
<!--Sale report Table-->

<div id="ShowSaleReportListing" class="mt-3">
   
</div>

<script src="~/Contents/CustomValidation/SaleReport.js"></script>