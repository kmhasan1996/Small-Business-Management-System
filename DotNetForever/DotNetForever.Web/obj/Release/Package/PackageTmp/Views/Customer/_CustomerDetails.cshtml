@model DotNetForever.Model.Model.Customer

<div class="modal-content">
    <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Customer Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <form id="customerForm">
        <div class="modal-body">
            @if (Model != null)
            {

            <table class="table table-bordered">
                <tr>
                    <th class="thead-light">Code</th>
                    <td> @Model.Code</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td> @Model.Name</td>
                </tr>
                <tr>
                    <th>Loyalty Point:</th>
                    <td>@Model.LoyaltyPoint</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th>Contact</th>
                    <td>@Model.Contact</td>
                </tr>
                <tr>
                    <th>Address:</th>
                    <td>@Model.Address</td>
                </tr>

            </table>

                
                
            }

        </div>

        <div class="modal-footer">
            <button id="closeButton" type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-2"></i>Close</button>
        </div>
    </form>
</div>